<Button>:
    on_press: app.buttons_functions(self)
    clr: ""



<MainLayout>:
    canvas.before:
        Color:
            rgba: (0.4, 0.4, 0.4, 1)

        Rectangle:
            size: root.width, root.height



    ScrollView:

        GridLayout:
            id: main_container
            cols: 1
            size_hint_y: None
            height: app.window_size[1]

            FloatLayout:
                size_hint: None, None
                size: app.window_size

                BoxLayout:
                    size_hint: 1, 0.1
                    pos_hint: {"top": 1}

                    Widget:
                        id: canvas_widget
                        size_hint: 0.3, 1
                        my_color: (1,0,0,1)
                        canvas:
                            Color:
                                rgba: self.my_color

                            Ellipse:
                                size: self.height, self.height
                                pos: 5, main_container.height - self.height - 5


                    GridLayout:
                        padding: 5
                        rows: 2
                        cols: 1
                        BoxLayout:
                            Label:
                                my_color: (1,0,0,1)

                                id: model_label
                                text: "Bravia Model"
                                canvas.before:
                                    Color:
                                        rgba: self.my_color

                                    Line:
                                        width: 1
                                        rectangle: self.x, self.y, self.width, self.height

                        BoxLayout:
                            Label:
                                my_color: (1,0,0,1)

                                id: ip_label
                                text: "IP"
                                canvas.before:
                                    Color:
                                        rgba: self.my_color

                                    Line:
                                        width: 1
                                        rectangle: self.x, self.y, self.width, self.height

                            Label:
                                my_color: (1,0,0,1)

                                id: psk_label
                                text: "PSK"
                                canvas.before:
                                    Color:
                                        rgba: self.my_color

                                    Line:
                                        width: 1
                                        rectangle: self.x, self.y, self.width, self.height





                BoxLayout:
                    size_hint: 1, 0.3
                    pos_hint: {"top": 0.8}
                    padding: 5
                    spacing: 30

                    GridLayout:
                        spacing: 5
                        rows: 3
                        cols: 3
                        Button:
                            text: "ON/\nOFF"
                            halign: "center"
                        Button:
                            id: leading_button
                            text: "UP"
                        Button:
                            text: "HOME"
                        Button:
                            text: "LEFT"
                        Button:
                            text: "OK"
                        Button:
                            text: "RIGHT"
                        Button:
                            text: "RETURN"
                        Button:
                            text: "DOWN"
                        Button:
                            text: ""
                            disabled: True

                    GridLayout:
                        spacing: 5
                        cols: 1
                        rows: 2

                        GridLayout:
                            spacing: 5
                            rows: 2
                            cols: 2


                            Button:
                                text: "Channel\nUP"
                                halign: "center"
                            Button:
                                text: "Volume\nUP"
                                halign: "center"
                            Button:
                                text: "Channel\nDOWN"
                                halign: "center"
                            Button:
                                text: "Volume\nDOWN"
                                halign: "center"

                        BoxLayout:
                            id: mute_box
                            size_hint: 1, 0.4
                            Button:
                                text: "MUTE"





                GridLayout:
                    id: options_box
                    padding: 5
                    spacing: 10
                    rows: 1
                    size_hint: 1, 0.07
                    pos_hint: {"top": 0.46}

                    Label:
                        text: "OPTIONS:"
                        font_size: "20dp"

                    Button:
                        text: "INPUTS"

                    Button:
                        text: "OPTIONS"

                    Button:
                        text: "EPG"


                Widget:
                    canvas:
                        Color:
                            rgba: 0,0,0,0.5
                        Line:
                            width: 5
                            points: [10, options_box.pos[1] + options_box.height + 10, main_container.width - 10, options_box.pos[1] + options_box.height + 10]



                Widget:
                    canvas:
                        Color:
                            rgba: 0,0,0,0.5
                        Line:
                            width: 5
                            points: [10, options_box.pos[1] - 10, main_container.width - 10, options_box.pos[1] - 10]





                GridLayout:
                    size_hint: 0.5, 0.35
                    pos_hint: {"y": 0, "center_x": 0.5}
                    rows: 4
                    cols: 3
                    padding: 5
                    spacing: 5

                    Button:
                        text: "1"
                    Button:
                        text: "2"
                    Button:
                        text: "3"
                    Button:
                        text: "4"
                    Button:
                        text: "5"
                    Button:
                        text: "6"
                    Button:
                        text: "7"
                    Button:
                        text: "8"
                    Button:
                        text: "9"

                    Widget:

                    Button:
                        text: "0"


                Button:
                    size_hint: 0.2, 0.05
                    pos_hint: {"y": 0, "right": 0.97}
                    text: "EXPAND"




<HiddenLayout>:
    GridLayout:
        padding: 5
        pos_hint: {"top": 0.9}
        cols: 1

        GridLayout:
            size_hint: 1, 0.1
            spacing: 15
            rows: 1

            Button:
                background_color: 1,0,0,1
                clr: "red"

            Button:
                background_color: 0,1,0,1
                clr: "green"

            Button:
                background_color: 0,0,1,1
                clr: "blue"

            Button:
                background_color: 1,0.9,0,1
                clr: "yellow"



        FloatLayout:
            id: all_options_box_layout

            Button:
                pos_hint: {"top": 0.9, "center_x": 0.5}
                size_hint: 0.35, 0.08
                text: "Show all options"




<AllOptionsBox>:
    size_hint: 0.8, 0.6
    pos_hint: {"top": 0.75, "center_x": 0.5}
    cols: 1

    ScrollView:
        id: all_options_scroll_view

        canvas.after:
            Color:
                rgba: 0.2, 0.2, 0.2, 1

            Line:
                width: 4
                rectangle: self.x, self.y, self.width, self.height


        GridLayout:
            id: all_options_final_box
            spacing: 10
            padding: 10
            size_hint: 1, None
            height: app.total_height
            cols: 3



<AOButton>:
    on_press: app.all_options_functions(self)
    size_hint: 1, None
    height: app.aobutton_height


<GreetingScreen>:
    canvas.before:
        Color:
            rgba: (0.4,0.4,0.4,1)
        Rectangle:
            size: self.width, self.height

    Label:
        text: "Enter your TV's PSK\nType >BRUTE {start value 0-9999}< to guess it\n(WARNING: It can take up to 1 hour when set to 0)"
        font_size: "14dp"
        halign: 'center'
        size_hint: None, 0.1
        width: root.width/2
        pos_hint: {"top": 0.95, "center_x": 0.5}


    TextInput:
        id: textinput
        size_hint: None, 0.05
        width: root.width/2
        pos_hint: {"top": 0.8, "center_x": 0.5}
        focus: True
        multiline: False
        font_size: "26dp"


    Button:
        text: "<ENTER>"
        size_hint: None, 0.05
        width: root.width/3
        pos_hint: {"top": 0.7, "center_x": 0.5}
        on_press: app.open_remote()


    Label:
        id: loading_label
        text: ""
        size_hint: None, 0.1
        width: root.width/3
        pos_hint: {"top": 0.5, "center_x": 0.5}
        font_size: "19dp"
        halign: "center"